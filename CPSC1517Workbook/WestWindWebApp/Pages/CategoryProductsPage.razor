@page "/category-products"
@page "/category-products/{CategoryId}"

@using WestWindSystem.BLL
@using WestWindSystem.Entities

<h3>Category Products</h3>

<fieldset class="mb-3">
	<legend>Category Selection</legend>
	<div class="row row-cols-lg-auto g-3 align-items-center">
		<div class="cols-12">
			<label class="visually-hidden" for="category">Category:</label>
			<select class="form-select" id="category" @bind="CategoryId">
				<option selected disabled>Select a category</option>
				@if (Categories != null)
				{
					@foreach (var category in Categories)
					{
						<option value="@category.CategoryId">@category.Description</option>
					}
				}				
			</select>
		</div>
		<div class="cols-12">
			<button class="btn btn-primary" @onclick="HandleCategorySelect" >Get Products</button>
		</div>
	</div>
</fieldset>

@if (Products != null)
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Product ID</th>
				<th>Product Name</th>
				<th>Discontinued</th>
				<th>Unit Price</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var products in Products)
			{
				<tr>
					<td>@products.ProductId</td>
					<td>@products.ProductName</td>
					<td>@products.Discontinued</td>
					<td class="text-end">@($"{products.UnitPrice:C}")</td>
				</tr>
			}
		</tbody>
	</table>
}


@code {
	[Inject]
	CategoryServices CategoryServices { get; set; }
	[Inject]
	ProductServices ProductServices { get; set; }
	[Inject]
	NavigationManager NavigationManager { get; set; }

	public List<Category>? Categories { get; set; } = null;
	public List<Product>? Products { get; set; } = null;

	[Parameter]
	public string? CategoryId { get; set; } = null;

	protected override void OnInitialized()
	{
		Categories = CategoryServices.GetAllCategories();
		if (CategoryId != null)
		{
			HandleCategorySelect();

			// Alternatively you can use
			// Products = ProductServices.GetProductsByCategoryID(int.Parse(CategoryId));
		}

		base.OnInitialized();
	}

	private void HandleCategorySelect()
	{
		if (CategoryId != null)
		{
			Products = ProductServices.GetProductsByCategoryID(int.Parse(CategoryId));
			NavigationManager.NavigateTo($"/category-products/{CategoryId}");
		}


	}

}
